<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OAuthV2 name="OA-GenerateAndStoreExternalToken">
    <DisplayName>OA-GenerateAndStoreExternalToken</DisplayName>
    <ClientId>token_client_id</ClientId>
    <GrantType>grant_type</GrantType>
    <ExternalAccessToken>access_token</ExternalAccessToken>
    <ExternalAuthorization>true</ExternalAuthorization>
    <Operation>GenerateAccessToken</Operation>
    <!-- Salesforce doesnt have a token validation endpoint, using GET /userinfo doesnt return any expiration time
    <ExpiresIn ref="token_validation_expires_in"/>
    -->
    <!-- milliseconds -->
    <ExpiresIn>60000</ExpiresIn>
    <ReuseRefreshToken>false</ReuseRefreshToken>
    <StoreToken>true</StoreToken>
    <SupportedGrantTypes>
        <GrantType>client_credentials</GrantType>
    </SupportedGrantTypes>
    <Tokens/>
</OAuthV2>